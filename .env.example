# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=PeerAI
VERSION=0.1.0
DEBUG=false

# Database Configuration (Bahnhof)
DATABASE_URL=postgresql://user:password@host:5432/peerai

# LLM Configuration
HOSTED_LLM_URL=https://llm-api.bahnhof.se/v1/completions
EXTERNAL_LLM_URL=https://fallback-llm.se/v1/completions
HOSTED_LLM_API_KEY=your-hosted-api-key
EXTERNAL_LLM_API_KEY=your-external-api-key
MOCK_MODE=false

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (Configure in production)
ALLOWED_ORIGINS=http://localhost:3000,https://app.peerdigital.se

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000 