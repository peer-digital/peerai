# Application Settings
DEBUG=false  # Set to true only in development
MOCK_MODE=false  # Set to true to use mock responses

# Database Configuration
# @url: https://www.postgresql.org/
DATABASE_URL=postgresql://user:password@localhost/peerai

# LLM Configuration
# Primary LLM (Bahnhof-hosted) - Optional
HOSTED_LLM_URL=https://llm-api.bahnhof.se/v1/completions
HOSTED_LLM_API_KEY=your_hosted_llm_api_key

# Fallback LLM (Mistral) - Required, data stored in Sweden
EXTERNAL_LLM_URL=https://api.mistral.ai/v1/chat/completions
EXTERNAL_LLM_API_KEY=your_mistral_api_key
EXTERNAL_MODEL=mistral-tiny

# JWT Configuration
# @url: https://jwt.io/
# @important: Change this in production!
JWT_SECRET_KEY=your-secret-key-for-development-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_MINUTE=60
RATE_LIMIT_DAILY=1000

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME="Peer AI"
VERSION=1.0.0

# Environment
# Options: development, staging, production
ENVIRONMENT=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.peerdigital.se

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=  # Add your Sentry DSN here if using Sentry

# Frontend Configuration
# @url: https://vitejs.dev/
VITE_API_BASE_URL=http://localhost:8000
VITE_DEV_MODE=true  # Set to false in production

# Optional: Cloud Storage (if needed)
# S3_BUCKET=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION= 