# Application Settings
DEBUG=false  # Set to true only in development
MOCK_MODE=false  # Set to true to use mock responses

# Database Configuration - Required to be in Sweden (Bahnhof)
DATABASE_URL=postgresql://user:password@localhost/peerai

# LLM Configuration
# Primary LLM (Bahnhof-hosted) - Optional
HOSTED_LLM_URL=https://llm-api.bahnhof.se/v1/completions
HOSTED_LLM_API_KEY=your_hosted_llm_api_key

# Fallback LLM (Mistral) - Required, data stored in Sweden
EXTERNAL_LLM_URL=https://api.mistral.ai/v1/chat/completions
EXTERNAL_LLM_API_KEY=your_mistral_api_key
EXTERNAL_MODEL=mistral-tiny

# Security
SECRET_KEY=your_secure_secret_key  # Used for token encryption
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
DEFAULT_DAILY_LIMIT=1000
DEFAULT_MINUTE_LIMIT=60

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=PeerAI
VERSION=0.1.0

# CORS (Configure in production)
ALLOWED_ORIGINS=http://localhost:3000,https://app.peerdigital.se

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000 